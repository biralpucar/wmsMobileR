{
  "expo": {
    "name": "depo",
    "slug": "depo-rayer430",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "depo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "main": "expo-router/entry",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Bu uygulama ses tanıma özelliği için izin gerektirir.",
        "NSMicrophoneUsageDescription": "Bu uygulama ses tanıma için mikrofon erişimi gerektirir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.rayer430.depo",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Bu uygulama ses tanıma için mikrofon erişimi gerektirir.",
          "speechRecognitionPermission": "Bu uygulama ses tanıma özelliği için izin gerektirir.",
          "androidSpeechServicePackages": [
            "com.google.android.googlequicksearchbox"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "initialRouteName": "login",
    "extra": {
      "eas": {
        "projectId": "55bd7db2-626a-49db-9847-221ce70c0786"
      }
    }
  }
}
